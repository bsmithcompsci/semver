{
    "tagging": {
        "supported_repositories": {
            "github": {
                "enabled": true
            },
            "gitlab": {
                "enabled": true
            },
            "bitbucket": {
                "enabled": true
            },
            "gitea": {
                "enabled": true
            }
        }
    },
    "branches": [
        {
            "name": "main",
            "increment": [
                "MAJOR",
                "MINOR",
                "PATCH"
            ]
        },
        {
            "name": "develop",
            "prerelease": true,
            "increment": [
                "MINOR",
                "PATCH"
            ]
        },
        {
            "name": "feature/*",
            "prerelease": true,
            "increment": [
                "PATCH"
            ]
        },
        {
            "name": "release/*",
            "increment": [
                "MINOR",
                "PATCH"
            ]
        },
        {
            "name": "fix/*",
            "prerelease": true,
            "increment": [
                "PATCH"
            ]
        }
    ],
    "commits": {
        "default": "PATCH",
        "caseSensitive": false,
        "release": ["release", "build"],
        "prerelease": ["prerelease", "rc", "beta", "alpha", "dev", "test"],
        "map": {
            "MAJOR": [
                "BREAKING CHANGE",
                "major"
            ],
            "MINOR": [
                "feature",
                "feat",
                "minor"
            ],
            "PATCH": [
                "refactor",
                "perf",
                "fix",
                "docs",
                "patch",
                "chore",
                "revert",
                "style",
                "test",
                "build",
                "ci",
                "deps",
                "security",
                "lint"
            ]
        } 
    }
}